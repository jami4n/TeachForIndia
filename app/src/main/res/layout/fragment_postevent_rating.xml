<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18dp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/color_gray"
            android:textStyle="bold"
            android:text="Hi Abhinetri,"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:backgroundTint="@android:color/transparent"
            android:textSize="18dp"
            android:textColor="@color/color_gray"
            android:text="We at Teach for India are grateful towards your contribution in the project to educate children in the town of Dakor, Gujarat for the entire month of December 2017. We are truly blessed to have volunteers like you, to be working with us and helping us in our mission for education. \nIn a competitive spirit, we'd like to rate your performance for this mission and would encourage you to give us some feedback about your experience as well."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Great"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textAlignment="center"
                android:text="Awesome"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textAlignment="textEnd"
                android:text="Outstanding"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/kids"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>


    </LinearLayout>

    </ScrollView>

</RelativeLayout>