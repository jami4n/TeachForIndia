<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/bg_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:background="@drawable/white_bg"
        android:alpha="0.97"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/ll_loginholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_login_ets"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
            android:id="@+id/et_name"
            android:hint="What's your name?"
            android:inputType="textPersonName"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_username"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_pass"
            android:inputType="textPassword"
            android:hint="Enter your Password"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/et_confirm_pass"
            android:inputType="textPassword"
            android:hint="Enter your Password again"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_error"
                android:visibility="gone"
                android:textColor="@color/color_blue"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="This text will mostly be hidden, except in cases of errors."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_below="@id/ll_login_ets"
            android:backgroundTint="@color/color_black"
            android:textColor="@color/color_white"
            android:text="register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_terms"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textSize="12dp"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:text="By registering, I agree to the terms and conditions."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</RelativeLayout>