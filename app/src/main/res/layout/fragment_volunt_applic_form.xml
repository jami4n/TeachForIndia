                    android:inputType="textMultiLine"
                    android:backgroundTint="@android:color/transparent"
                    android:lines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!--base card education-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
