                    android:textColor="@color/color_black"
                    android:text="June-July-August"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/tv_availablemonth_ond"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="October-November-December"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_availablemonth_jfm"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="January-February-March"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_availablemonth_all"
                    android:layout_marginTop="4dp"
                    android:text="I am available during all months"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

