            <!--base card why volunteer-->
            <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/white_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                android:text="Why would you like to volunteer with Teach For India?"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_volunteer_reason"
                android:inputType="textMultiLine"
                android:backgroundTint="@android:color/transparent"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            </LinearLayout>



            <!--base card Prior experience-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Have you had prior teaching experience?"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_teachingexp_yes"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="Yes"
                    android:layout_marginLeft="4dp"
