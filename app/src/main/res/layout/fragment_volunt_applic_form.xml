<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/color_black"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--base card -->
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Fill in your name here."
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_name"
                    android:inputType="text"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!--base card -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Age goes in here."
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_age"
                    android:inputType="number"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <!--base card gender-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Gender"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_boy"
                        android:layout_margin="10dp"
                        android:src="@drawable/boy_line"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <ImageView
                        android:id="@+id/iv_girl"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/girl_line"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>

            <!--base card contact-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="We'll need your contact number."
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_contact"
                    android:inputType="number"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!--base card email-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Your current email"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_email"
                    android:inputType="number"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!--base card address-->
            <LinearLayout
