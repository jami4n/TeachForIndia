                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_classroom"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="Classroom instruction"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_adolescence"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="Adolescent support"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_extras"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="Extra-curricular workshops/discussions"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_research"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="Research and data analysis"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_funds"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="Fund-raising"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_social_media"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_black"
                    android:text="Social media"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


