<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_marginBottom="85dp"
        android:id="@+id/sv_banner_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_banner"
            android:scaleType="centerCrop"
            android:src="@drawable/bannerimage"
            android:layout_width="match_parent"
            android:layout_height="260dp" />

        <TextView
            android:id="@+id/tv_banner_text"
            android:layout_margin="10dp"
            android:text="Imagination is endless. Photographed by our volunteer Abhinetri at Dakor, Gujarat. This was at the winter camp for Social Education."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Only a life lived for others, is worth living.\n-Albert Einstien"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:weightSum="10"
        android:background="@color/color_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/color_white"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="256"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_white"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Susanne Rodrigues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textColor="@color/color_white"
                android:textAlignment="center"
                android:text="the Prefect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>